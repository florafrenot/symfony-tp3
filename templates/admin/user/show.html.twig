{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
{% include 'admin/nav.html.twig' %}

    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>MDP</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_index') }}">Revenir à la liste</a>

    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Éditer</a>

    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
